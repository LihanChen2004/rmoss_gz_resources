    <!--macro defination: small armor module with support frame-->
    <xmacro_define_block name="small_armor_with_support" params="suffix parent rgb sticker_uri pose">
        <xmacro_block name="armor_support_frame" suffix="${suffix}" parent="${parent}" pose="${pose}"/>
        <xmacro_block name="small_armor" suffix="${suffix}" parent="armor_support_frame${suffix}" rgb="${rgb}" sticker_uri="${sticker_uri}" pose="0.075 0 -0.071 0 -0.262 0"/>
    </xmacro_define_block>
    <!--macro defination: large armor module with support frame-->
    <xmacro_define_block name="large_armor_with_support" params="suffix parent rgb sticker_uri pose">
